---
import Layout from "../layouts/Layout.astro";
import Profile from "@/components/Profile.astro";
import Data from "@/components/Data.astro";
import Formacion from "@/components/Formacion.astro";
import Work from "@/components/Work.astro";
import Soft_skills from "@/components/Soft_skills.astro";
import Skills from "@/components/Skills.astro";

import { basics } from "@cv";
const { name } = basics;
---

<Layout title=`Cv. ${name}`>
	<main
		class="w-full lg:w-6/12 lg:px-10 py-12 flex flex-col gap-4"
	>
		<Data />

		<Profile />

		<Soft_skills />

		<Skills />

		<Formacion />

		<Work />

	</main>
</Layout>